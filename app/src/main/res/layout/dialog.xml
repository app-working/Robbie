<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" android:id="@+id/base_layout">

    <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:background="#41BBF5"
            android:textAlignment="center" android:textStyle="bold"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/robbie"
            android:layout_margin="30dp"
            android:layout_gravity="center" android:id="@+id/image_checkin"/>

    <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:padding="8dp" android:gravity="center" android:textStyle="bold"/>

</LinearLayout>